{% extends 'base.html.twig' %}

{% block title %}Acceuil!{% endblock %}

{% block body %}
    <h1>Hello vous étes sur la page d'accueil! ✅</h1>
    <div class="row">
    {% for article in articles %}
    <div class="card col-md-4" style="width: 18rem;">
    <p class="date">Ecrit le {{ article.createdAt | date("d/m/y") }} à {{ article.createdAt | date("h:i") }}
    par <spam class="author"> {{ article.author }}</spam></p>
         <img class="card-img-top" src="/assets/blog/images/{{ article.image }}" alt="{{ article.title }}">
         <div class="card-body">
             <h5 class="card-title">{{ article.title }}</h5>
         <a href="{{ path('show', {'id': article.id})}}" class="btn btn-primary">En savoir plus</a>
         </div>
    </div>
{% endfor %}
<\div>
{% endblock %}
